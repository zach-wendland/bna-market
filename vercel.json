{
  "version": 2,
  "framework": null,
  "installCommand": "cd frontend && npm install && cd .. && pip install -r requirements.txt",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@3.0.7",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.py"
    },
    {
      "source": "/((?!api|assets|favicon).*)",
      "destination": "/index.html"
    }
  ]
}
